{
  "apps": [
    {
      "name": "game",
      "script": "app.js",
      "instances": 4,
      "instance_var": "INSTANCE_ID",
      "exec_mode": "cluster",
      "cwd": "../../game_app",
      "args": [],
      "node_args": "--harmony",
      "merge_logs": false,
      "autorestart": false,
      "wait-ready": true,
      "listen-timeout": 60000,
      "max_memory_restart": "2048M",
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "/dev/null",
      "out_file": "/dev/null"
    }
  ]
}
